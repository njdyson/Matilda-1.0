PORT=3000

# Alpaca Market Data credentials
ALPACA_KEY_ID=your_alpaca_key_id
ALPACA_SECRET_KEY=your_alpaca_secret_key

# Optional (default: iex)
ALPACA_FEED=iex

# Optional (default: https://data.alpaca.markets)
ALPACA_MARKET_DATA_URL=https://data.alpaca.markets

# Optional (default: https://api.alpaca.markets)
ALPACA_TRADING_URL=https://api.alpaca.markets

# Finnhub company profile key (used by /api/company)
FINNHUB_API_KEY=your_finnhub_api_key

# Optional (default: https://finnhub.io/api/v1)
FINNHUB_BASE_URL=https://finnhub.io/api/v1

# OpenAI key (used by /api/ai/research)
OPENAI_API_KEY=your_openai_api_key

# Optional (default: https://api.openai.com/v1)
OPENAI_BASE_URL=https://api.openai.com/v1

# Optional (default: gpt-4.1-mini)
OPENAI_MODEL=gpt-4.1-mini
